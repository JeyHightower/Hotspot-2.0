{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./routes/**/*",
    "./app.ts",
    "./dbclient.ts",
    "./bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
