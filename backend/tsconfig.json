{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"]
  },
  "include": [
    "routes/**/*",
    "utils/**/*",
    "config/**/*",
    "bin/**/*",
    "app.ts",
  ],
  "exclude": ["node_modules"]
}
