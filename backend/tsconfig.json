{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"]
  },
  "include": [
    "**/*.ts",
    "app.ts",
    "routes/**/*.ts",
    "dbclients.ts",
    "prisma/seeds.ts"
  ],
  "exclude": ["node_modules"]
}