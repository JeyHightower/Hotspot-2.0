{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "../target",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "types": [ "node", "express"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
