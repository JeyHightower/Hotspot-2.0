{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "express",
      "cookie-parser",
      "cors",
      "csurf",
      "morgan",
      "bcryptjs",
      "jsonwebtoken"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
