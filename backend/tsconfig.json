{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "routes/**/*",
    "utils/**/*",
    "config/**/*",
    "prisma/**/*",
    "bin/**/*",
    "app.ts",
    "dbclient.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
